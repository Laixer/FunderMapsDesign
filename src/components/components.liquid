<div class="grid grid-cols-2 gap-10">
  {%- for item in collections.components -%}
    {% unless page.url == item.url %}
      <a href="{{ item.url }}" class="ld-card">
        <div class="ld-card__media | aspect-video">
          <img
            src="/lemone-design/icons/component-{{ item.data.title | slugify }}.svg"
            alt=""
            class="">
        </div>
        <div class="ld-card__content ld-group">
          <h4 class="ld-group-hover">{{ item.data.title }}</h4>
          <p>{{ item.data.excerpt }}</p>
        </div>
      </a>
    {% endunless %}
  {%- endfor -%}
</div>
